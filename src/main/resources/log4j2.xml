<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n"/>
        </Console>

        <File name="aFileAppender" fileName="logs/test.log">
            <PatternLayout>
                <Pattern>%msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>

        <logger name="industry.skills.logs.example.basic.AClassThatDoesSomething" level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="aFileAppender"/>
        </logger>

        <logger name="industry.skills.logs.example.basic.Main" level="info">
            <AppenderRef ref="Console"/>
        </logger>

        <Root level="FATAL">
        </Root>

    </Loggers>
</Configuration>